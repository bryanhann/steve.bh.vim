#!/bin/bash

[ "${0:0:1}" == "/" ] || {
    echo "[$0]: must be called with fully qualified path name" >&2
    exit
}

export HERE=$(dirname $0)
export PROXY=${HOME}/.vim

# CLONE AMIX

SRC=https://github.com/amix/vimrc.git
DST=${HERE}/vim_runtime
[ -d ${DST} ] || git clone ${SRC} ${DST}

# LINK

rm ${PROXY}
ln -s ${HERE} ${PROXY}
